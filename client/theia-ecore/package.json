{
  "name": "theia-ecore",
  "description": "Glue code to integrate Ecore GLSP sprotty client into Eclipse Theia",
  "keywords": [
    "theia-extension"
  ],
  "author": {
    "name": "EclipseSource"
  },
  "license": "(EPL-2.0 OR MIT)",
  "version": "0.2.0",
  "files": [
    "lib",
    "src"
  ],
  "homepage": "https://github.com/eclipsesource/ecore-glsp",
  "bugs": "https://github.com/eclipsesource/ecore-glsp",
  "repository": {
    "type": "git",
    "url": "https://github.com/eclipsesource/ecore-glsp.git"
  },
  "dependencies": {
    "@eclipse-glsp/theia-integration": "next",
    "@theia/core": "latest",
    "sprotty-ecore": "0.2.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "rimraf": "latest",
    "typescript": "~3.5.3"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "rimraf lib",
    "build": "tsc && yarn run lint",
    "lint": "eslint -c ./.eslintrc.js --ext .ts ./src",
    "watch": "tsc -w",
    "publish:latest": "yarn publish --tag latest",
    "publish:next": "yarn publish --new-version \"$(semver $npm_package_version -i minor)-next.$(git rev-parse --short HEAD)\" --tag next"
  },
  "theiaExtensions": [
    {
      "frontend": "lib/browser/frontend-extension",
      "backend": "lib/node/backend-extension"
    }
  ]
}
